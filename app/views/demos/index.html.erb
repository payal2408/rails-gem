<div class="container">
  <div class="card shadow mt-3 p-3 img">
      <p id="notice"><%= notice %></p>
      <h1>Demos</h1>
      <%= search_form_for @q do |f| %>
        
        <div class="row p-2">
          <div class="col-sm-4">
            <%= f.search_field :title_cont, class: "form-control", placeholder: "Search"%>
          </div>
          <div class="col-sm-4">
            <%= f.submit class: "btn bg-primary text-white" %>
          </div>
        </div>
      <%end%>
      <table class="table">
        <thead>
          <tr>
            <th>Title</th>
            <th>Body</th>
            <th colspan="3"></th>
          </tr>
        </thead>

        <tbody>
          <% @demos.each do |demo| %>
            <tr>
              <td><%= demo.title %></td>
              <td><%= demo.body %></td>
              <td><%= link_to 'Show', demo, class: "btn btn-outline-primary btn-sm "  %></td>
              <td><%= link_to 'Edit', edit_demo_path(demo), class: "btn btn-outline-primary btn-sm "  %></td>
              <td><%= link_to 'Destroy', demos_delete_path(demo), method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-outline-primary btn-sm " %></td>
            </tr>
          <% end %>
        </tbody>
      </table>

      <br>
        <%= paginate @demos %>
  </div>

    
</div>
